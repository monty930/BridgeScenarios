<link rel="stylesheet" href="~/css/leftside/settings.css"/>

<div class="settings-container">
    <div class="settings-inner-container">
        <div class="one-setting">
            <div class="settings-title">
                Number of deals in set:
            </div>
            <div class="settings-choice">
                <div class="number-spinner">
                    <input type="number" id="deals-in-set" class="input-number" value="12" min="1" max="24">
                    <div class="input-number-arrows">
                        <button type="button" class="number-spinner-btn number-spinner-increment">
                            <div class="up-button-container">
                                <img class="input-arrow-up-img" src="~/assets/arrow-up.png" alt="Decrease"/>
                            </div>
                        </button>
                        <button type="button" class="number-spinner-btn number-spinner-decrement">
                            <div class="down-button-container">
                                <img class="input-arrow-down-img" src="~/assets/arrow-down.png" alt="Decrease"/>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="settings-break"></div>
        <div class="one-setting">
            <div class="settings-title">
                Compiler:
            </div>
            <div class="settings-choice">
                <div class="custom-select-container">
                    <select class="settings-select" id="compiler-choice">
                        <option value="Chai">Chai</option>
                        <option value="Latte">Latte</option>
                    </select>
                    <div class="custom-select-arrow">
                        <img src="~/assets/arrow-down.png" alt="Expand"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="settings-break"></div>
        <div class="one-setting">
            <div class="settings-title">
                Vulnerability:
            </div>
            <div class="settings-choice">
                <div class="custom-select-container">
                    <select class="settings-select" id="vulnerability-choice">
                        <option value="Matching">Matching numbers</option>
                        <option value="Random">Random</option>
                        <option value="None">None</option>
                        <option value="NS">NS</option>
                        <option value="EW">EW</option>
                        <option value="All">All</option>
                    </select>
                    <div class="custom-select-arrow">
                        <img src="~/assets/arrow-down.png" alt="Expand"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="settings-break"></div>
        <div class="one-setting">
            <div class="settings-title">
                Dealer:
            </div>
            <div class="settings-choice">
                <div class="custom-select-container">
                    <select class="settings-select" id="dealer-choice">
                        <option value="Matching">Matching numbers</option>
                        <option value="Random">Random</option>
                        <option value="North">N</option>
                        <option value="East">E</option>
                        <option value="South">S</option>
                        <option value="West">W</option>
                    </select>
                    <div class="custom-select-arrow">
                        <img src="~/assets/arrow-down.png" alt="Expand"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="settings-break"></div>
        <div class="one-setting">
            <div class="settings-title">
                Randomly flip deal:
            </div>
            <div class="settings-choice">
                <div class="custom-select-container">
                    <select class="settings-select" id="flip-choice">
                        <option value="NoFlip">--</option>
                        <option value="Flip90st">90&deg;</option>
                        <option value="Flip180st">180&deg;</option>
                    </select>
                    <div class="custom-select-arrow">
                        <img src="~/assets/arrow-down.png" alt="Expand"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="settings-break"></div>
        <div class="one-setting">
            <div class="settings-title">
                Scoring:
            </div>
            <div class="settings-choice">
                <div class="custom-select-container">
                    <select class="settings-select" id="scoring-choice">
                        <option value="Imp">IMP</option>
                        <option value="Mp">MP</option>
                    </select>
                    <div class="custom-select-arrow">
                        <img src="~/assets/arrow-down.png" alt="Expand"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
