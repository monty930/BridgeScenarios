<link rel="stylesheet" href="~/css/leftside/settings.css"/>

<div class="align">
    <div class="left-side-title">
        Settings
    </div>
    <div class="left-side-content">
        <div class="line-numbers"></div>
        <div class="form-container">
            <div class="inner-container settings-container">
                <div class="settings-names">
                    Number of deals in set:<br/>
                    Compiler:<br/>
                    Vulnerability:<br/>
                    Randomly flip deal:<br/>
                    Dealer: <br/>
                </div>
                <div class="settings-option-column">
                    <input type="number" id="deals-in-set" value="12" min="1" max="24"><br/>
                    
                    <div class="settings-options">
                        <select id="compiler-choice">
                            <option value="Chai">Chai</option>
                            <option value="Latte">Latte</option>
                        </select><br/>
                    </div>
                    <select id="vulnerability-choice">
                        <option value="Random">Random</option>
                        <option value="None">None</option>
                        <option value="NS">NS</option>
                        <option value="EW">EW</option>
                        <option value="All">All</option>
                    </select><br/>
                    <select id="flip-choice">
                        <option value="NoFlip">--</option>
                        <option value="Flip90st">90&deg;</option>
                        <option value="Flip180st">180&deg;</option>
                    </select><br/>
                    <select id="dealer-choice">
                        <option value="Random">Random</option>
                        <option value="North">N</option>
                        <option value="East">E</option>
                        <option value="South">S</option>
                        <option value="West">W</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
