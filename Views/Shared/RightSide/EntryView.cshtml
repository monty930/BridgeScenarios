<link rel="stylesheet" href="~/css/scenarios/rightside/entryview.css"/>

<div class="right-view-container">
    <div class="right-view-buttons">
        @{
            await Html.RenderPartialAsync("RightSide/RightSideGenerateButtons");
        }
    </div>
    <div class="message-and-spinner">
        <div class="entry-message entry-message-shifted" id="entry-message">
            Generate an example deal!
        </div>
        <div id="spinner" class="spinner-container spinner-container-shifted" style="display:none;">
            <div class="loader">
                <img id="loading-img" src="~/assets/loading-simp.png"
                     alt="Randomly Oriented Image"/>
                <script type="text/javascript" src="/js/spinner.js"></script>
            </div>
        </div>
    </div>
    <div class="right-side-bottom-left-corner">
        <div></div>
        <div></div>
        <div class="toggle-view-container">
            <div class="toggle-view-container-right">
                <button id="toggle-view"
                        class="toggle-button toggle-button-right" 
                        onclick="toggleView()">EDIT CONSTRAINTS</button>
            </div>
        </div>
    </div>
</div>

<div id="log-hidden-content" style="display: none;">
    <div class="log-view">
        <div class="grid-log-columns">
            <div class="logs-output">
                @if (Model.ScriptOutputRaw != string.Empty)
                {
                    <pre>@Model.ScriptOutputRaw</pre>
                }
            </div>
            <div>
                <button class="compile-error-button back" id="backButton">BACK</button>
            </div>
        </div>
    </div>
</div>