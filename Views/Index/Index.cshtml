@model BridgeScenarios.Models.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/buttons.css"/>
    <link rel="stylesheet" href="~/css/dialog.css"/>
    <link rel="stylesheet" href="~/css/highpriority.css"/>
</head>

<div class="page-layout">
    <div class="left-panel">
        @{
            await Html.RenderPartialAsync("LeftSideView", Model);
        }
    </div>
    <div id="right-partial">
        @{
            await Html.RenderPartialAsync("RightSideView", Model);
        }
    </div>
</div>

<div id="dialogSaveWindow" class="dialog-window">
    <div class="dialog-window-content">
        <button id="closeButton" class="close-button">x</button>
        <textarea
            id="filenameArea"
            rows="1"
            cols="25"
            placeholder="filename"
            style="resize: none;"></textarea>
        <select id="saveChoices">
            <option value="pbn-chosen">.pbn</option>
            <option value="lin-chosen">.lin</option>
        </select>
        <div class="save-spinner-container">
            <div id="save-spinner" class="spinner-container" style="display: none;">
                <div class="loader">
                    <img id="loading-img" src="~/assets/loading-simp.png"
                         alt="Randomly Oriented Image"/>
                    <script type="text/javascript" src="/js/spinner.js"></script>
                </div>
            </div>
        </div>
        <button id="submitButton" class="save-submit-button">Submit</button>
    </div>
</div>

<script type="text/javascript" src="/js/index.js"></script>
<script type="text/javascript" src="/js/rightside.js"></script>
<script type="text/javascript" src="/js/leftside.js"></script>
<script type="text/javascript" src="/js/buttons/buttons.js"></script>
<script type="text/javascript" src="/js/buttons/dealbuttons.js"></script>
<script type="text/javascript" src="/js/buttons/tabbuttons.js"></script>
<script type="text/javascript" src="/js/buttons/dialog.js"></script>
<script type="text/javascript" src="/js/buttons/errorbuttons.js"></script>
